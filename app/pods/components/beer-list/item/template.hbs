<div class = "{{componentCssClassName}}-titleAndBrewery {{parentClass}}-titleAndBrewery {{grandParentClass}}-titleAndBrewery">
  {{#if (and (eq mode 'tap') beer.tap.number)}}
    <div class = "{{componentCssClassName}}-tap {{parentClass}}-tap {{grandParentClass}}-tap">
      {{strip-tags beer.tap.number}}
    </div>
  {{/if}}{{! beer.tap.number }}

  <h3 class = "{{componentCssClassName}}-title {{parentClass}}-title {{grandParentClass}}-title">
    {{strip-tags beer.name}}
  </h3>

  <div class = "{{componentCssClassName}}-brewery {{parentClass}}-brewery {{grandParentClass}}-brewery">
    {{#if beer.styleExplanation}}
      <span class = "{{componentCssClassName}}-field-value {{parentClass}}-field-value {{grandParentClass}}-field-value">
        <abbr title = {{strip-tags beer.styleExplanation}}>
          {{~strip-tags beer.style~}}
        </abbr>
      </span>{{! value }}
    {{else}}
      <span class = "{{componentCssClassName}}-field-value {{parentClass}}-field-value {{grandParentClass}}-field-value">
        {{strip-tags beer.style}}
      </span>{{! value }}
    {{/if}}{{! explanation }}

    {{#if beer.brewery.name}}
      –æ—Ç {{strip-tags beer.brewery.name}}
    {{/if}}{{! brewery.name }}
  </div>{{! field }}
</div>{{! titleAndBrewery }}



<div class = "{{componentCssClassName}}-content {{parentClass}}-content {{grandParentClass}}-content">

  {{#if beer.image.main}}
    <img
      class  = "{{componentCssClassName}}-image {{parentClass}}-image {{grandParentClass}}-image"
      src    = {{beer.image.main.url}}
      width  = {{beer.image.main.dimensions.width}}
      height = {{beer.image.main.dimensions.height}}
      alt    = {{or beer.image.main.alt (concat (strip-tags beer.name) ' –æ—Ç ' (strip-tags beer.brewery.name))}}
    >
  {{/if}}{{! beer.image.main }}

  <div class = "{{componentCssClassName}}-fields {{parentClass}}-fields {{grandParentClass}}-fields">
    {{#if beer.ibu}}
      <div class = "{{componentCssClassName}}-field {{parentClass}}-field {{grandParentClass}}-field _ibu">
        <span class = "{{componentCssClassName}}-field-label {{parentClass}}-field-label {{grandParentClass}}-field-label">
          <abbr title = "–†–∞—Å—á–µ—Ç–Ω–∞—è –≥–æ—Ä–µ—á—å">IBU</abbr> {{~concat~}}
        </span>{{! label }}

        <span class = "{{componentCssClassName}}-field-value {{parentClass}}-field-value {{grandParentClass}}-field-value">
          {{strip-tags beer.ibu~}}
          <img
            src   = "/icons/hops.png"
            class = "{{componentCssClassName}}-field-value-icon"
          >
        </span>{{! value }}
      </div>{{! field }}
    {{/if}}{{! ibu }}

    {{#if beer.abv}}
      <div class = "{{componentCssClassName}}-field {{parentClass}}-field {{grandParentClass}}-field _abv">
        <span class = "{{componentCssClassName}}-field-label {{parentClass}}-field-label {{grandParentClass}}-field-label">
          <abbr title = "–ö—Ä–µ–ø–æ—Å—Ç—å –Ω–∞ –µ–¥–∏–Ω–∏—Ü—É –æ–±—ä–µ–º–∞">ABV</abbr> {{~concat~}}
        </span>{{! label }}

        <span class = "{{componentCssClassName}}-field-value {{parentClass}}-field-value {{grandParentClass}}-field-value">
          {{strip-tags beer.abv}}¬∞
        </span>{{! value }}
      </div>{{! field }}
    {{/if}}{{! abv }}

    {{#if beer.gravity}}
      <div class = "{{componentCssClassName}}-field {{parentClass}}-field {{grandParentClass}}-field _gravity">
        <span class = "{{componentCssClassName}}-field-label {{parentClass}}-field-label {{grandParentClass}}-field-label">
          <abbr title = "–ù–∞—á–∞–ª—å–Ω–∞—è –ø–ª–æ—Ç–Ω–æ—Å—Ç—å">OG</abbr> {{~concat~}}
        </span>{{! label }}

        <span class = "{{componentCssClassName}}-field-value {{parentClass}}-field-value {{grandParentClass}}-field-value">
          {{strip-tags beer.gravity}}%
        </span>{{! value }}
      </div>{{! field }}
    {{/if}}{{! gravity }}

    {{#if (eq mode 'tap')}}
      {{#if beer.pricePint}}
        <div class = "{{componentCssClassName}}-field {{parentClass}}-field {{grandParentClass}}-field _price-pint">
          <span class = "{{componentCssClassName}}-field-label {{parentClass}}-field-label {{grandParentClass}}-field-label">
            <abbr title = "–¶–µ–Ω–∞ –∑–∞ –±–æ–∫–∞–ª">‚ÇΩ/üç∫</abbr> {{~concat~}}
          </span>{{! label }}

          <span class = "{{componentCssClassName}}-field-value {{parentClass}}-field-value {{grandParentClass}}-field-value">
            {{strip-tags beer.pricePint}} ‚ÇΩ
          </span>{{! value }}
        </div>{{! field }}
      {{/if}}{{! priceLiter }}

      {{#if beer.priceLiter}}
        <div class = "{{componentCssClassName}}-field {{parentClass}}-field {{grandParentClass}}-field _price-liter">
          <span class = "{{componentCssClassName}}-field-label {{parentClass}}-field-label {{grandParentClass}}-field-label">
            <abbr title = "–¶–µ–Ω–∞ –∑–∞ –ª–∏—Ç—Ä">‚ÇΩ/üçª</abbr> {{~concat~}}
          </span>{{! label }}

          <span class = "{{componentCssClassName}}-field-value {{parentClass}}-field-value {{grandParentClass}}-field-value">
            {{strip-tags beer.priceLiter}} ‚ÇΩ
          </span>{{! value }}
        </div>{{! field }}
      {{/if}}{{! pricePint }}

    {{else if (eq mode 'bottle')}}
      {{#if beer.priceBottle}}
        <div class = "{{componentCssClassName}}-field {{parentClass}}-field {{grandParentClass}}-field _price-bottle">
          <span class = "{{componentCssClassName}}-field-label {{parentClass}}-field-label {{grandParentClass}}-field-label">
            <abbr title = "–¶–µ–Ω–∞ –∑–∞ –±—É—Ç—ã–ª–∫—É">‚ÇΩ/üçæ</abbr> {{~concat~}}
          </span>{{! label }}

          <span class = "{{componentCssClassName}}-field-value {{parentClass}}-field-value {{grandParentClass}}-field-value">
            {{strip-tags beer.priceBottle}} ‚ÇΩ
          </span>{{! value }}
        </div>{{! field }}
      {{/if}}{{! priceBottle }}
    {{/if}}{{! mode }}
  </div>{{! fields }}

  {{#if beer.description}}
    {{collapsible-text
      class   = (concat componentCssClassName "-description " parentClass "-description")
      content = beer.description
    }}
  {{/if}}{{! beer.description }}

</div>{{! content }}